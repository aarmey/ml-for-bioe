pipeline {
  agent any
  stages {
    stage('Setup') {
      steps {
        sh 'git clean -ffdx'
        sh 'git status'
        dir('website') {
          sh 'bundle install --path ~/.gem'
        }
      }
    }
    stage('Build') {
      steps {
        sh 'make -j 24'
        dir('website') {
          sh 'bundle exec jekyll build'
        }
      }
    }
    stage('Test'){
      steps {
        dir('website') {
          sh 'bundle exec htmlproofer --check-html --url-ignore "/ml-for-bioe/" --http-status-ignore "412" --timeframe 24w --assume-extension ./_site'
        }
      }
    }
    stage('Report') {
      steps {
        archiveArtifacts artifacts: 'lectures/*.pdf', onlyIfSuccessful: true

        step([
          $class: 'TasksPublisher',
          canComputeNew: false,
          defaultEncoding: '', 
          excludePattern: '',
          healthy: '',
          high: 'TODO,FIXME,XXX', low: '', normal: 'CITE',
          pattern: '**/*.py, **/*.md',
          unHealthy: ''])
      }
    }
    stage('Deploy') {
      when { expression { env.BRANCH_NAME == 'master' } }
      steps {
        dir('website/_site') {
          sh 'git init; git config user.name "Jenkins CI"; git config user.email "jenkins@asmlab.org"'
          sh 'git remote add upstream "git@github.com:aarmey/ml-for-bioe.git"; git fetch upstream; git reset upstream/gh-pages; touch .; git add .'
          sh 'git commit -m "Jenkins $BUILD_ID auto-pushed"; git push --force -q upstream HEAD:gh-pages'
        }
      }
    }
  }
}
